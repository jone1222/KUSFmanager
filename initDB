CREATE TABLE ReservedUser(
	reservId int,
	sid int,
	FOREIGN KEY(reservId) REFERENCES Reservation(reservId) ON DELETE CASCADE,
	FOREIGN KEY(sid) REFERENCES User(sid) ON DELETE CASCADE,
	PRIMARY KEY(reservId, sid)
);

